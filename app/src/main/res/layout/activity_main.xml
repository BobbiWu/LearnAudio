<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/btnStartRecord"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/start_record" />

    <Button
        android:id="@+id/btnConvert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="pcmè½¬wav" />

    <Button
        android:id="@+id/btnPlay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/start_play" />

    <Button
        android:id="@+id/btnWavPlay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/start_wav_play" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnFunny"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_funny"/>

        <Button
            android:id="@+id/btnMonster"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_monster"/>
    </LinearLayout>
</LinearLayout>